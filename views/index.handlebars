<h1>BURGER ME APP</h1>

<p>CREATE AND DEVOUR BURGERS WITH THIS APP</p>



<main>

    <ul>
        {{#each burgers}}
        <li>
            <p><span class="label">ID:</span> {{this.id}}</p>
            <p><span class="label">Burger Name:</span> {{this.burger_name}}</p>
            <p><span class="label">Description:</span> {{this.b_description}}</p>

            <button data-id="{{this.id}}" class="delburger">DEVOUR!!</button>


        </li>
        {{/each}}
    </ul>


    <h2>Add A Burger Here</h2>

    <div class="row">
        <div class="col s12">
            <form action="/burgers" method="POST">
                <input type="text" id="name" name="burger_name" placeholder="Add a Burger">
                <textarea id="desc" name="description" rows="8" cols="40"></textarea>
                <button type="submit" class="addBurgerButton">Add a Burger</button>
            </form>
        </div>
    </div>

</main>

